@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifremi Unuttum - IAU</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        /* Genel Stil */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #2a2a2e, #121214);
            color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .forgot-password-container {
            background-color: #1c1c1f;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.6);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .logo-container {
            margin-bottom: 20px;
        }

        .logo {
            width: 150px;
        }

        h1 {
            font-size: 28px;
            margin-bottom: 10px;
            color: #ffffff;
        }

        .intro-text {
            font-size: 16px;
            color: #cccccc;
            margin-bottom: 30px;
        }

        .forgot-password-form .input-group {
            margin-bottom: 20px;
        }

        .input-field {
            width: 100%;
            padding: 12px;
            border: 1px solid #444;
            border-radius: 5px;
            font-size: 16px;
            background-color: #2e2e33;
            color: #ffffff;
            outline: none;
            transition: border-color 0.3s ease;
        }

            .input-field::placeholder {
                color: #888;
            }

            .input-field:focus {
                border-color: #ff5e7b;
            }

        .submit-btn {
            width: 100%;
            padding: 14px;
            background-color: #ff5e7b;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .submit-btn:hover {
                background-color: #ff2a57;
            }

        .success-message {
            color: #32cd32;
            font-weight: bold;
        }

        .error-message {
            color: #e63946;
            font-weight: bold;
        }

        .back-to-login {
            display: inline-block;
            margin-top: 15px;
            text-decoration: none;
            color: #ff5e7b;
            font-weight: 600;
            transition: color 0.3s;
        }

            .back-to-login:hover {
                color: #ff2a57;
            }
    </style>
</head>
<body>
    <div class="forgot-password-container">
        <div class="logo-container">
            <img src="https://uploads.turbologo.com/uploads/design/hq_preview_image/472636/draw_svg20240905-1-1ulyzo2.svg.png" alt="IAU Logo" class="logo">
        </div>

        <h1>Şifremi Unuttum</h1>
        <p class="intro-text">E-posta adresinizi girin ve şifrenizi sıfırlayın.</p>

        <!-- Şifre sıfırlama formu -->
        <form class="forgot-password-form" method="post" asp-action="SendResetLink" asp-controller="Account">
            <div class="input-group">
                <input type="email" name="email" placeholder="E-posta Adresiniz" required class="input-field">
            </div>
            <button type="submit" class="submit-btn"> Sıfırlama Linki Gönder</button>
        </form>

        <br />
        @if (ViewBag.Message != null)
        {
            <p class="success-message">@ViewBag.Message</p>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <p class="error-message">@ViewBag.ErrorMessage</p>
        }

        <br>
        <a asp-controller="Account" asp-action="Login" class="back-to-login">Geri Dön</a>
    </div>
</body>
</html>
